{
  "arrowParens": "always",
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": false,
  "bracketSameLine": true,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "lodash/(.*)$",
    "^api/(.*)$",
    "^app/(.*)$",
    "^types/(.*)$",
    "^constants/(.*)$",
    "^lib/(.*)$",
    "^hooks/(.*)$",
    "^components/(.*)$",
    "^features/(.*)$",
    "^features/(.*)/api$",
    "^features/(.*)/api/(.*)$",
    "^features/(.*)/types$",
    "^features/(.*)/types/(.*)$",
    "^features/(.*)/constants$",
    "^features/(.*)/constants/(.*)$",
    "^features/(.*)/lib$",
    "^features/(.*)/lib/(.*)$",
    "^features/(.*)/hooks$",
    "^features/(.*)/hooks/(.*)$",
    "^features/(.*)/components/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ]
}
